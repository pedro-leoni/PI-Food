{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    /* Modules */
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    /* Interop Constraints */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.test.ts"]
}
